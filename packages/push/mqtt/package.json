{
  "name": "@openmdm/push-mqtt",
  "version": "0.2.1",
  "description": "MQTT push adapter for OpenMDM - ideal for private networks and self-hosted deployments",
  "author": "OpenMDM Contributors",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openmdm/core": "workspace:*",
    "mqtt": "^5.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "mqtt": ">=5.0.0"
  },
  "keywords": [
    "openmdm",
    "mqtt",
    "push",
    "notifications",
    "iot"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azoila/openmdm.git",
    "directory": "packages/push/mqtt"
  },
  "homepage": "https://openmdm.dev",
  "bugs": {
    "url": "https://github.com/azoila/openmdm/issues"
  },
  "publishConfig": {
    "access": "public"
  }
