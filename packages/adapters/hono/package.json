{
  "name": "@openmdm/hono",
  "version": "0.1.0",
  "description": "Hono framework adapter for OpenMDM",
  "author": "OpenMDM Contributors",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openmdm/core": "workspace:*"
  },
  "devDependencies": {
    "hono": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "hono": ">=4.0.0"
  },
  "keywords": [
    "openmdm",
    "hono",
    "http",
    "adapter",
    "rest-api"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azoila/openmdm.git",
    "directory": "packages/adapters/hono"
  },
  "homepage": "https://openmdm.dev",
  "bugs": {
    "url": "https://github.com/azoila/openmdm/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
